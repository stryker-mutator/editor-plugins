  "version": "0.2.0",
  "configurations": [
    {
      "args": [
        "--timeout",
        "0",
        "--colors",
        "${workspaceFolder}/packages/mutation-server-protocol/dist/**/*.spec.js"
      ],
      "internalConsoleOptions": "openOnSessionStart",
      "name": "☕ MSP tests",
      "program": "${workspaceRoot}/node_modules/mocha/bin/mocha",
      "runtimeArgs": ["--enable-source-maps"],
      "request": "launch",
      "skipFiles": ["<node_internals>/**"],
      "type": "node",
      "outFiles": [
        "${workspaceFolder}/packages/*/dist/**/*.(m|c|)js",
        "!**/node_modules/**"
      ]
    },
    {
      "args": [
        "--timeout",
        "0",
        "--colors",
        "${workspaceFolder}/packages/vscode-plugin/dist/**/*.spec.js"
      ],
      "internalConsoleOptions": "openOnSessionStart",
      "name": "☕ vscode-plugin tests",
      "program": "${workspaceRoot}/node_modules/mocha/bin/mocha",
      "runtimeArgs": ["--enable-source-maps"],
      "request": "launch",
      "skipFiles": ["<node_internals>/**"],
      "type": "node",
      "outFiles": [
        "${workspaceFolder}/packages/*/dist/**/*.(m|c|)js",
        "!**/node_modules/**"
      ]
    }
  ]
}
