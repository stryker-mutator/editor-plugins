{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "all": "pnpm run clean && pnpm run build && pnpm run lint && pnpm run test",
    "clean": "rimraf -g packages/*/dist/ packages/*/*.tsbuildinfo",
    "build": "lerna run build",
    "test": "lerna run test",
    "lint": "lerna run lint && pnpm run format",
    "format": "prettier . --check",
    "format:fix": "pnpm run format --write",
    "release": "GH_TOKEN=$(gh auth token) lerna version"
  },
  "devDependencies": {
    "@types/chai": "^5.2.2",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.7.2",
    "chai": "^6.2.0",
    "lerna": "^9.0.0",
    "mocha": "^11.7.4",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "typescript": "~5.9.3"
  },
  "packageManager": "pnpm@10.28.0"
}
