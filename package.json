{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "all": "npm run clean && npm run build && npm run lint && npm run test",
    "clean": "rimraf -g packages/*/dist/ packages/*/*.tsbuildinfo",
    "build": "lerna run build",
    "test": "lerna run test",
    "lint": "lerna run lint && npm run format",
    "format": "prettier . --check",
    "format:fix": "npm run format -- --write",
    "release": "GH_TOKEN=$(gh auth token) lerna version"
  },
  "devDependencies": {
    "@types/chai": "^5.2.2",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.18.0",
    "chai": "^6.2.0",
    "lerna": "^8.2.3",
    "mocha": "^11.7.4",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "typescript": "~5.6.3"
  }
}
