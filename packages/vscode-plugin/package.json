{
  "name": "stryker-mutator",
  "displayName": "Stryker Mutation Testing",
  "description": "Test your tests with mutation testing.",
  "version": "0.1.0",
  "publisher": "stryker-mutator",
  "author": "Jasper van der Veen",
  "engines": {
    "vscode": "^1.104.3"
  },
  "categories": [
    "Testing"
  ],
  "type": "commonjs",
  "keywords": [
    "stryker",
    "mutator",
    "strykerjs",
    "mutation",
    "mutation testing",
    "test",
    "testing",
    "stryker mutator",
    "stryker-mutator",
    "mutation server protocol",
    "msp"
  ],
  "icon": "images/icon.png",
  "activationEvents": [
    "onStartupFinished"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/stryker-mutator/editor-plugins.git",
    "directory": "packages/vscode-plugin"
  },
  "bugs": {
    "url": "https://github.com/stryker-mutator/editor-plugins/issues"
  },
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "category": "Stryker Mutator",
        "command": "strykerMutator.reload",
        "title": "Reload Workspace"
      }
    ],
    "configuration": {
      "title": "Stryker Mutator",
      "properties": {
        "strykerMutator.enable": {
          "description": "Enable the Stryker Mutator extension.",
          "scope": "resource",
          "type": "boolean",
          "default": true
        },
        "strykerMutator.watchPattern": {
          "markdownDescription": "Glob pattern for files to watch for changes and trigger mutation discovery. Uses [VS Code glob pattern syntax](https://code.visualstudio.com/docs/editor/glob-patterns#_glob-pattern-syntax).",
          "scope": "resource",
          "type": "string",
          "default": "**/*.{js,ts,jsx,tsx}"
        },
        "strykerMutator.server.path": {
          "description": "Path to the mutation server executable.",
          "scope": "resource",
          "type": "string",
          "default": "node_modules/.bin/stryker"
        },
        "strykerMutator.server.args": {
          "description": "Arguments to pass to the mutation server process when starting.",
          "scope": "resource",
          "type": "array",
          "default": [
            "runServer"
          ]
        },
        "strykerMutator.server.workingDirectory": {
          "description": "Working directory for the Stryker server process. Defaults to the workspace folder if not set.",
          "scope": "resource",
          "type": "string",
          "default": "."
        },
        "strykerMutator.server.configFile": {
          "description": "Optional path to your project's configuration file which will be passed to the server.",
          "scope": "resource",
          "type": "string",
          "default": null
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --watch --noEmit",
    "build": "npm run check-types && npm run lint && node esbuild.js --production",
    "clean": "rm -rf out",
    "compile-tests": "npm run clean && tsc --outDir out",
    "watch-tests": "npm run clean && tsc -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "xvfb-run -a vscode-test",
    "test:local": "vscode-test",
    "deploy": "vsce publish --azure-credential",
    "deploy:prerelease": "vsce publish --azure-credential --pre-release"
  },
  "devDependencies": {
    "@types/chai": "^5.2.2",
    "@types/chai-as-promised": "^8.0.2",
    "@types/mocha": "^10.0.10",
    "@types/node": "24.x",
    "@types/sinon": "^17.0.4",
    "@types/sinon-chai": "^4.0.0",
    "@types/vscode": "^1.104.0",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.6.2",
    "chai": "^6.2.0",
    "chai-as-promised": "^8.0.2",
    "esbuild": "^0.25.10",
    "eslint": "^9.37.0",
    "npm-run-all": "^4.1.5",
    "sinon": "^21.0.0",
    "sinon-chai": "^4.0.1",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "json-rpc-2.0": "^1.7.1",
    "mutation-server-protocol": "^0.3.0",
    "rxjs": "^7.8.2",
    "typed-inject": "^5.0.0"
  }
}
