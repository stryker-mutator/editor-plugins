{
  "name": "stryker-mutator",
  "displayName": "Stryker Mutator",
  "description": "Test your tests with mutation testing.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Testing"
  ],
  "keywords": [
    "stryker",
    "mutator",
    "strykerjs",
    "mutation",
    "mutation testing",
    "test",
    "testing",
    "stryker mutator",
    "stryker-mutator",
    "mutation server protocol",
    "msp"
  ],
  "icon": "images/icon.png",
  "activationEvents": [
    "onStartupFinished"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/stryker-mutator/editor-plugins.git",
    "directory": "packages/vscode-plugin"
  },
  "bugs": {
    "url": "https://github.com/stryker-mutator/editor-plugins/issues"
  },
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "Stryker Mutator",
      "properties": {
        "strykerMutator.enableMutationTesting": {
          "description": "Enable mutation testing.",
          "scope": "resource",
          "type": "boolean",
          "default": null
        },
        "strykerMutator.fileSystemWatcherPattern": {
          "markdownDescription": "The file system watcher pattern that is used to watch for file changes inside the workspace folder. Use [Visual Studio Code's glob pattern syntax](https://code.visualstudio.com/docs/editor/glob-patterns#_glob-pattern-syntax).",
          "scope": "resource",
          "type": "string",
          "default": "**/*.{js,ts,jsx,tsx}"
        },
        "strykerMutator.mutationServer.path": {
          "description": "The path to the mutation server. Absolute path or relative to the workspace folder.",
          "scope": "resource",
          "type": "string",
          "default": "node_modules/.bin/stryker"
        },
        "strykerMutator.mutationServer.args": {
          "description": "The arguments to pass to the mutation server.",
          "scope": "resource",
          "type": "array",
          "default": ["runServer"]
        },
        "strykerMutator.mutationServer.workingDirectory": {
          "description": "The working directory for the mutation server. If not set, the workspace folder path will be used.",
          "scope": "resource",
          "type": "string"
        },
        "strykerMutator.mutationServer.configFilePath": {
          "description": "Path to the Stryker configuration file. Absolute path or relative to the workspace folder.",
          "scope": "resource",
          "type": "string",
          "default": "stryker.config.json"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.9",
    "@types/node": "20.x",
    "@types/vscode": "^1.95.0",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.7.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "esbuild": "^0.24.0",
    "eslint": "^9.13.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "json-rpc-2.0": "^1.7.0",
    "mutation-server-protocol": "^0.3.0",
    "rxjs": "^7.8.1",
    "typed-inject": "^4.0.0"
  }
}
